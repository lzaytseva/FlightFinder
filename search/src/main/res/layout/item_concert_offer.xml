<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:layout_marginEnd="16dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="132dp"
        android:layout_height="132dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/image_11" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/FlightFinder.Text.Title_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/main_text_color"
        tools:text="Die Antwoord" />

    <TextView
        android:id="@+id/tv_city"
        style="@style/FlightFinder.Text.Text_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/main_text_color"
        tools:text="Будапешт" />

    <TextView
        android:id="@+id/tv_price"
        style="@style/FlightFinder.Text.Text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableStart="@drawable/ic_plane_tickets"
        android:drawableTint="@color/grey_6"
        android:textColor="@color/main_text_color"
        tools:text="от 22 264 Р" />

</LinearLayout>